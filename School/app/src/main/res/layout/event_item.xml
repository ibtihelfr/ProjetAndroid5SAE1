    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/rose"
        android:layout_marginBottom="8dp">

        <!-- Event Image Placeholder -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <!-- Event Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heure_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heure de l'événement"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/prix_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix : 100€"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description de l'événement"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type d'événement"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Edit and Delete Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Icon"
                android:backgroundTint="@color/rose"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_remove"
                android:contentDescription="Delete Icon"
                android:backgroundTint="@color/rose"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
