<!-- res/layout/activity_add_evenement.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/asset"> <!-- Ajout de l'arrière-plan -->
    <TextView
        android:id="@+id/titleAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="20dp"
        android:text="Add/Edit Restaurant"
        android:textAlignment="center"
        android:textColor="@color/rose"
        android:textSize="40dp"
        android:textStyle="bold"
        />
    <!-- Heure de l'événement -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heure de l'événement"
        android:textSize="16sp"
        android:paddingBottom="4dp"/>
    <EditText
        android:id="@+id/etHeure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HH:MM"
        android:inputType="time"/>

    <!-- Prix de l'événement -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>
    <EditText
        android:id="@+id/etPrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prix"
        android:inputType="numberDecimal"/>

    <!-- Description de l'événement -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>
    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"/>

    <!-- Type de l'événement -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"/>
    <EditText
        android:id="@+id/etType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type de l'événement"
        android:inputType="text"/>

    <!-- Bouton pour ajouter l'événement -->
    <Button
        android:id="@+id/btnAjouterEvenement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter l'Événement"
        android:backgroundTint="@color/rose"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>
</LinearLayout>